<div class="container">
    <div class="row justify-content-md-center">
        <h1>Log In</h1>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-xl-6">
            {{>messages}}
            <form action="/user/login" method="POST">
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" id="email" class="form-control" name="email" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary mb-4">Log In</button>
            </form>
            <h5>No Accaunt?<a href="/user/register" class="ml-1">Register</a></h5>
        </div>
    </div>
</div>