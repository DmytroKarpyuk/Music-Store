<div class="container">
    {{#if products}}
        <div class="row justify-content-sm-center mb-4">
            <h2>Cart</h2>
        </div>
        {{#each products}}
            <div class="row mb-2">
                <div class="col-8">
                    <strong>{{this.item.name}}</strong>
                </div>
                <div class="col-1">
                    <span class="badge ml-3">{{this.qty}}</span>
                </div>
                <div class="col-1">
                    <span class="label label-success"><b>${{this.price}}</b></span>
                </div>
                <div class="col-2">
                    <div class="dropdown">
                        <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Action
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="/reduce/{{this.item._id}}">Reduce by 1</a>
                            <a class="dropdown-item" href="/remove/{{this.item._id}}">Remove All</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
        <hr>
        <div class="row mb-3">
            <div class="col-sm-10"></div>
            <div class="col-sm-2">
                <strong style="font-size: 18px;">Total: ${{totalPrice}}</strong>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10"></div>
            <div class="col-sm-2">
                <a href="/checkout" class="btn btn-success btn-lg mb-3">Checkout</a>
            </div>
        </div>
    {{else}}
        <div class="row">
            <div class="col-6">
                <h2>No Items in Cart</h2>
            </div>
        </div>
    {{/if}}
</div>
