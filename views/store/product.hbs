<div class="container mb-4">
    {{>store_nav}}
</div>
<div class="container">
    {{#each product}}
    <div class="row justify-content-sm-center">
        <h2>{{name}}</h2>
    </div>
    <img class="thumb" src="../images/{{image}}" alt="">
    <p style="font-size: 18px;">{{description}}</p>
    <div class="row">
        <div class="col-10">
            <h4>{{price}}$</h4>
        </div>
        <div class="col-2">
            <a href="/adding-to-cart/{{_id}}" class="btn btn-success btn-lg add-to-cart mb-3">Add to cart
            </a>
        </div>
    </div>
    {{/each}}
</div>